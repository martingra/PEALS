@model Peals.Models.usuario
@{
    ViewBag.Title = "Iniciar Sesion";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<link href="../../../Content/Estilos/InicioSesion.css" rel="stylesheet" type="text/css">

<div id="registrarse">
    <h2>
        Registrarse</h2>
    <p>
        ¿No ten&eacute;s cuenta? Registrate en pocos segundos</p>
    <p style="margin-left: 25%;">
        @if (@ViewBag.tipoUsuario == "Administrador")
        {
            @Html.ActionLink("Registrarse", "NuevoAdministrador", "Administrador");
        }
        else if (@ViewBag.tipoUsuario == "Docente")
        {
            @Html.ActionLink("Registrarse", "NuevoDocente", "Docente");
        }
        else if (@ViewBag.tipoUsuario == "Alumno")
        {
            @Html.ActionLink("Registrarse", "NuevoAlumno", "Alumno");
        }
    </p>
    <div id="help"> 
        <input type="image" id="ayuda" class="submit" src="@Url.Content("~/Content/Recursos/Home/Ayuda.jpg")" />
    </div>
</div>
<div id="ingresar">
    <h2>
        Ingresar</h2>
    <p>
        Ingres&aacute; tus datos para iniciar sesi&oacute;n:</p>
    <div id="fondoInicioSesion">
        <img src="../../../Content/Recursos/Home/InicioSesion.jpg" width="400" height="350" />
    </div>
    <div id="inicioSesion">
        @using (Html.BeginForm())
        {
            <table class="formulario">
                <tr>
                    <td>
                        Usuario:
                    </td>
                    <td>
                        @Html.TextBoxFor(m => m.mail)
                    </td>
                </tr>
                <tr>
                    <td>
                        Contraseña:
                    </td>
                    <td>
                        @Html.PasswordFor(m => m.contrasena)
                    </td>
                </tr>
                <input style="visibility:hidden" type="text" id="tipoUsuario" name="tipoUsuario" value="@ViewBag.tipoUsuario" />
                <tr>
                    <td>
                    </td>
                    <td align="right">
                        <input type="image" class="submit" src="../../../Content/Recursos/Home/boton_iniciar_sesion.JPG" />
                    </td>
                </tr>
            </table>
        }
        </br> </br> </br> </br>
    </div>
    <div>
        </br></br>
        <p align="center">
            ¿Olvidaste tu <a href="#" style="color: #03F">Contraseña</a>?</td></p>
    </div>
</div>
<div id="modal" class="styled">
    @{Html.BeginForm();}
    <table id="tablaDatosDocente">
        <tbody>
            <tr>
                <td>
                    @if (@ViewBag.tipoUsuario == "Administrador")
                    {
                        <p>Para poder crear una institucion, primero debes registrarte como Administrador de Instituciones.</p>
                        <p>El administrador de instituciones tiene a su cargo una o varias instituciones.</p>
                        <p>Tiene control sobre el plantel docente que conforma la institucion, los cursos, los alumnos y las actividades entre otros</p>
                        <P>Registrese ahora como Administrador para crear su o sus instituciones y empezar a utilizar los servicios de PEALS</P>
                    }
                    else if (@ViewBag.tipoUsuario == "Docente")
                    {
                        <p>Registrese como Docente para poder cargar Actividades y hacer el seguimiento de sus alumnos</p>
                    }
                    else if (@ViewBag.tipoUsuario == "Alumno")
                    {
                        <p>Registrate como Alumno para poder unirte a una institucion o realizar las actividades de la academia publica PEALS</p>
                    }
                </td>
                <td>
                    <input id="btn_cancelar" type="button" value="Aceptar" />
                </td>
            </tr>
        </tbody>
    </table>
</div>
<div id="modal-background">
</div>
<script type="text/javascript">
    $("#ayuda").click(function () {
        $('#modal').fadeIn();
        $('#modal-background').fadeTo(500, .5);
    });

    $("#btn_cancelar").click(function () {
        $('#modal, #modal-background').fadeOut();
    });
</script>
@{Html.EndForm();}
</div> 