<style>
.ui-autocomplete {
    background: #ffffff; 
    border-left: 1px solid gray;
    border-right: 1px solid gray;
    border-bottom: 1px solid gray;
    z-index: 500;
} 
</style>
<input type="text" id="buscar" name="buscar" class="ui-autocomplete-input" autocomplete="off" style="vertical-align:top;" />
<script type="text/javascript" language="javascript">
    var isHoverSelect = false;
    $("#buscar").autocomplete({
        source: function (request, response) {
            $.ajax({
                url: "@ViewBag.accion", type: "POST", dataType: "JSON",
                data: {
                    parametro: request.term
                },
                success: function (data) {
                    response($.map(data, function (item) {
                        return {
                            label: item.@ViewBag.label,
                            value: item.@ViewBag.value,
                            id: item.@ViewBag.id
                        };
                    }));
                }
            });
        },
        minLength: 2//,
//            search: function () { $(this).addClass('working'); },
//            open: function () { $(this).removeClass('working'); }
    });
</script>

